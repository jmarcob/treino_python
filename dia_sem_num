#programa que exibe dias da semana ao inserir um numero correspondente
semana = (['domingo','segunda','terça','quarta','quinta','sexta','sábado'])
valor = (['1', '2', '3', '4', '5', '6', '7'])

while True:
    x = input("diga um numero de 1 a 7: ")
    if x in valor:
        pos_valor = valor.index(x)
        valor == semana
        y = semana[pos_valor]
        print ("o dia da semana é", y)
        break
    else:
        print("escolha um valor entre 1 e 7")
