#informa o maior de dois numeros
x = eval(input("diga um valor para x"))
y= eval(input("diga um valor para y"))

if x>y:
    print ("x é maior que y")
else:
    print ("y é maior que x")


#informa se o número é positivo ou negativo
x = eval(input("diga um valor para x: "))

if x> 0:
    print ("x é positivo")
elif x == 0:
    print("x é ZERO")
else:
    print (" é negativo")
