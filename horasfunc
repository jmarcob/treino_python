def horas(hora, min):
    if 0 < hora < 12 and 0 < min < 60:
        print(f'são {hora} e {min}')
    elif 12 < hora < 24 and 0 < min < 60:
        print(f'são {hora - 12} e {min}')
    else:
        print("valor inválido")


while True:
    h = eval(input("que horas são?"))
    m = eval(input("quantos minutos?"))
    horas(h,m)
    print("="* 12)
