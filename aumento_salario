#progrma para calcular aumentos de salarios
sal = eval(input("insira o valor do salário atual: "))
if sal <= 280:
    sal_novo = sal*1.20
    print (" o salário anterior era ", sal,", teve um aumento de 20% equivalente a ", sal_novo-sal)
    print ("o salário novo é ", sal_novo)

elif sal>280 and sal<700:
    sal_novo = sal*1.15
    print(" o salário anterior era ", sal, ", teve um aumento de 15% equivalente a ", sal_novo - sal)
    print("o salário novo é ", sal_novo)
elif sal>=700 and sal<1500:
    sal_novo = sal*1.10
    print(" o salário anterior era ", sal, ", teve um aumento de 10% equivalente a ", sal_novo - sal)
    print("o salário novo é ", sal_novo)
else:
    sal_novo = sal*1.05
    print(" o salário anterior era ", sal, ", teve um aumento de 5% equivalente a ", sal_novo - sal)
    print("o salário novo é ", sal_novo)
